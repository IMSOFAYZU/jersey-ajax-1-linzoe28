<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>JSP Page</title>
        <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
        <script>
            function getUser(){
                /*
                1. ajax get user data
                2. fill data to id and password
                */
                let userId=$("#userId").val();
                $.ajax("webapi/user/"+userId,{
                   success:function(data){
                       $("#id").text(data.id);
                       $("#password").text(data.password);
                   } 
                });
            }
        </script>
    </head>
    <body>
        id: <input type="text" id="userId"/><button onclick="getUser();">Query</button><br/>
        <hr/>
        <!--
        add id and password span field
        -->
        id:<span id="id"></span> password:<span id="password"></span>
    </body>
</html>
